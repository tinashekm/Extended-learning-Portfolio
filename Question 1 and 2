        "guess_count = 0\n",
        "guess_limit = 9\n",
        "\n",
        "while guess_count < guess_limit :\n",
        "  guess = int(input(\"Input a number:\"))\n",
        "  guess_count +=1 \n",
        "  if guess> mystery_num :\n",
        "    print(\"Oops, your number is greater than the secret number. Enter another one\")\n",
        "  if guess<mystery_num :\n",
